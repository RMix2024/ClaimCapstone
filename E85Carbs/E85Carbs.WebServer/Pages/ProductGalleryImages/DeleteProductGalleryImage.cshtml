@page "{id}"
@model E85Carbs.WebServer.Pages.ProductGalleryImages.DeleteProductGalleryImageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Product Gallery Photo";
}

<h1>@ViewData["Title"]</h1>



<h2>Are you sure you want to delete this?</h2>

<h3> @Model.ProductGalleryImage.ProductGalleryImageName</h3>
<div class="card-thumbnail">
    <img src="data:image/gif;base64,@Model.ProductGalleryImage.ProductGalleryBase64Image" class="img-fluid" alt="Card image cap">
</div>


<div>
    <form method="post" asp-page-handler="Delete">
        <input type="hidden" asp-for="@Model.ProductGalleryImage.ProductGalleryImageId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="../ProductGalleryImages/ProductGalleryImagesMenu" asp-route-id="@Model.ProductGalleryImage.ProductId">Back to product gallery photos Menu</a>
    </form>
</div>
