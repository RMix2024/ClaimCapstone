@page "{id}"
@model E85Carbs.WebServer.Pages.Makes.EditMakeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Manufacture";
}

<h1>@ViewData["Title"]</h1>
<h3>@Model.Make.MakeName</h3>


<div>
    <form method="post" asp-page-handler="Submit">
        <label>Manufacture Name:</label>
        <input type="text" asp-for="@Model.Make.MakeName">
        <input type="hidden" asp-for="@Model.Make.MakeId">
        <input type="submit" value="Submit" class="text-success">
    </form>
</div>

