@page "{id}"
@model E85Carbs.WebServer.Pages.BuildGalleryImages.BuildGalleryImagesMenuModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Customer build Gallery Photos";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mt-4 mb-4">@ViewData["Title"]</h2>
        </div>

        <div class="card-thumbnail">
            <img src="data:image/gif;base64,@Model.customerBuild.MainBase64Image" class="img-fluid" alt="Card image cap">
            <p>^^^^ Main Photo ^^^^</p>
        </div>

        <div>
            @if (Model.BuildGalleryImages.Count != 0)
            {
                @foreach (var buildGalleryImage in Model.BuildGalleryImages)
                {
                    <div class="col-md-6 col-lg-4">
                        <!-- Bootstrap 5 card box -->
                        <div class="card-box">
                            <div class="card-thumbnail">
                                <img src="data:image/gif;base64,@buildGalleryImage.BuildGalleryBase64Image" class="img-fluid" alt="Card image cap">
                            </div>
                            <h3><a href="#" class="mt-2 text-danger">@buildGalleryImage.BuildGalleryImageName</a></h3>
                            <a asp-page="/BuildGalleryImages/DeleteBuildGalleryImage" asp-route-id="@buildGalleryImage.BuildGalleryImageId" class="btn btn-danger float-left">Remove</a><br />
                        </div>
                    </div>
                }
            }
            else
            {
                <div><h3>There are no photos uploaded at this time</h3></div>
            }
        </div>
    </div>
</div>
<div>
    <a asp-page="/BuildGalleryImages/AddBuildGalleryImage" asp-route-id="@Model.customerBuild.CustomerBuildId" class="btn btn-success">Add another Photo</a>
</div>

