@page "{id}"
@model E85Carbs.WebServer.Pages.Products.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>@ViewData["Title"]</h1>
<h3>@Model.Product.ProductName</h3>


<div>
    <form method="post" asp-page-handler="Submit">
        <p><label>Product Name:</label><input type="text" asp-for="@Model.Product.ProductName"></p>
        <p><label>Product Description:</label><input type="text" asp-for="@Model.Product.ProductDescription"></p>
        <p><label>Product Price:$</label><input type="number" step="0.01" asp-for="@Model.Product.ProductPrice"></p>
        <input type="hidden" asp-for="@Model.Product.ProductId">
        <input type="hidden" asp-for="@Model.Product.MainBase64Image">
        <input type="hidden" asp-for="@Model.Product.MakeName">
        <input type="hidden" asp-for="@Model.Product.CategoryName">
        <input type="submit" value="Submit" class="text-success">
    </form>
</div>
